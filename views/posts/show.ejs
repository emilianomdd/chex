<% layout('layouts/boilerplate')%>
    <link rel="stylesheet" href="/stylesheets/stars.css">
    <div class="row">
        <div class="card col-12 col-md-6 single-post-card p-1">
            <div class="card-body">
                <div id="campgroundCarousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <% post.images.forEach((img, i)=> { %>
                            <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                                <img src="<%= img.url%>" class="d-block w-100" alt="">
                            </div>
                            <% }) %>

                    </div>
                    <% if(post.images.length> 1) {%>
                        <a class="carousel-control-prev" href="#campgroundCarousel" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#campgroundCarousel" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                        <% } %>
                </div>
                <div class="mt-4 center">
                    <div class="row mb-2">
                        <div class="col-10">
                            <h4 class="card-title">
                                <%= post.title%>
                            </h4>
                        </div>
                        <div class="col-2">
                            <span class="post-price">
                                $<%= post.price%>
                            </span>
                        </div>
                    </div>

                    <% if( currentUser && post.author.equals(currentUser._id)) {%>
                        <div class="card-body">
                            <a class="card-link btn btn-info" href="/posts/<%=campground._id%>/edit">Edit</a>
                            <form class="d-inline" action="/posts/<%=campground._id%>?_method=DELETE" method="POST">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                        <% } else { %>
                            <form autocomplete="on" action="/posts/carrito/<%=post.id%>" method="POST">
                                <div class="row">
                                    <!-- <div class="mb-2"> Selecionar Seccion -->
                                    <!-- <% for (let section of campground.sections){%>
                                        <input class="form-check-input  mt-2" type="checkbox" value="<%=section%>"
                                            name="section" id="<%=section%>">
                                        <label class="form-check-label text-dark" for="<%=section%>">
                                            <%=section%>
                                        </label>
                                        <%}%> -->
                                    <%if(campground.sections){%>
                                        <!-- Select section -->
                                        <div class="col-12 col-md-4 mb-2">
                                            <label class="form-label" for="section">Puerta:</label>
                                            <select id="section" name="section" class="form-control">
                                                <option value="N/A">N/A</option>
                                                <% for (let section of campground.sections){ let selected=(
                                                    product.section==section ) ? "selected" : "" ; %>
                                                    <option value="<%=section%>" <%=selected%>>
                                                        <%=section%>
                                                    </option>
                                                    <%}%>
                                            </select>
                                        </div>
                                        <%}%>
                                            <!-- <div class="mb-2"> Selecionar Drop Off
                            <% for (let drop_off of campground.drop_offs){%>
                                <input class="form-check-input  mt-2" type="checkbox" value="<%=drop_off%>"
                                    name="drop_off" id="<%=drop_off%>">
                                <label class="form-check-label text-dark" for="<%=drop_off%>">
                                    <%=drop_off%>
                                </label>
                                <%}%>
                        </div> -->
                                            <!-- <%if(campground.drop_offs){%>
                                                <div class="col-12 col-md-4 mb-2">
                                                    <label class="form-label" for="drop_off">Drop Off:</label>
                                                    <select id="drop_off" name="drop_off" class="form-control">
                                                        <option value=" N/A">N/A</option>
                                                        <% for (let drop_off of campground.drop_offs){ let selected=(
                                                            product.drop_off==drop_off ) ? "selected" : "" ; %>
                                                            <option value="<%=drop_off%>" <%=selected%>>
                                                                <%=drop_off%>
                                                            </option>
                                                            <%}%>
                                                    </select>
                                                </div>
                                                <%}%> -->
                                            <div class="col-7 col-md-4 mb-2">
                                                <label class="form-label" for="seat">Numero de Asiento:</label>
                                                <input type="text" name="seat" id="seat" class="form-control"
                                                    value="<%= product.seat %>">
                                            </div>
                                            <div class="col-5 col-md-4 mb-2">
                                                <label class="form-label" for="letter">Letra:</label>
                                                <input type="text" name="letter" id="letter" class="form-control"
                                                    value="<%= product.letter %>">
                                            </div>
                                            <div class="col-12">
                                                <div class="row mt-3">
                                                    <div class="col-12 mb-2">
                                                        <label class="form-label" for="how_many">Cantidad:</label>
                                                        <input type="number" name="how_many" id="how_many"
                                                            placeholder="Cantidad" class="form-control"
                                                            value="<%= product.how_many %>" required>
                                                    </div>
                                                    <div class="col-8 mb-2">
                                                        <button type="submit" class="btn btn-primary btn-block">Agregar
                                                            a
                                                            Carrito</button>
                                                    </div>
                            </form>
                            <form action="/campgrounds/<%=campground._id%>" method="GET">
                                <div class="col-8 mb-2">
                                    <button class="btn btn-primary">Regrear a
                                        <%= campground.name%>
                                    </button>
                                </div>
                            </form>
                </div>
            </div>
        </div>
        <% } %>
    </div>