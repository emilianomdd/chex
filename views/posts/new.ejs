<% layout('layouts/boilerplate')%>

    <div class="row">
        <h1 class="text-center">Nuevo Articulo</h1>
        <div class="col-md-8 offset-md-2">
            <form action="/posts/<%= place.id%>" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Tiulo</label>
                    <input class="form-control" type="text" id="title" name="post[title]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="caption">Descripcion</label>
                    <input class="form-control" type="text" id="caption" name="post[caption]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Precio</label>
                    <input class="form-control" type="text" id="price" name="post[price]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="col-12 col-md-4 mb-3">
                    <label class="form-label" for="category">Categoria:</label>
                    <select id="category" name="category" class="form-control">
                        <option value="N/A">N/A</option>
                        <% for (let category of place.categories){ %>
                            <option value="<%=category%>" <%=category%>>
                                <%=category%>
                            </option>
                            <%}%>
                    </select>
                </div>
                <div class="mb-3">
                    <div class="form-file custom-file">
                        <input type="file" class="form-file-input" id="image" name="image" multiple>
                        <label class="form-file-label" for="image">
                            <span class="form-file-text custom-file-label">Seleccione Imagen(es)...</span>
                            <span class="form-file-button">Look up in Library</span>
                        </label>
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Agregar Articulo</button>
                </div>
            </form>
            <a href="/places">Home</a>
        </div>
    </div>
    </div>