<% layout('layouts/boilerplate')%>
    <div class="row">
        <div class="card col-12 col-md-6 single-post-card p-1">
            <h1 class="text-center">Editar Cantidad</h1>
            <form action="/cart/<%=pre_order._id%>?_method=PUT" method="POST">
                <h2>Precio por articulo: <%=post.price%>$
                </h2>
                <label class="form-label" for="how_many">Cantidad:</label>
                <select id="how_many" name="how_many" class="form-control">
                    <option value="1">
                        1 : <%=post.price%>$
                    </option>
                    <% for (let i=2;i<=5; i++){%>
                        <option value="<%=i%>">
                            <%=i%>: <%=post.price * i%>$
                        </option>
                        <%}%>
                </select>

                <div class="mb-3">
                    <button class="btn mt-2 btn-outline-secondary btn-block">Modificar Cantidad</button>
                </div>

            </form>
            <div class="col-md-6 offset-md-3">
                <div id="placeCarousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <% post.images.forEach((img, i)=> { %>
                            <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                                <img src="<%= img.url%>" class="d-block w-100" alt="">
                            </div>
                            <% }) %>

                    </div>
                    <% if(post.images.length> 1) {%>
                        <a class="carousel-control-prev" href="#placeCarousel" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#placeCarousel" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                        <% } %>
                </div>

                <a href="/render-cart" class="btn mt-2 btn-outline-secondary btn-block">Regresar al Carrito</a>
            </div>
        </div>
    </div>