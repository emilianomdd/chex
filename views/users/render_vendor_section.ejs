<% layout('layouts/boilerplate')%>
    <link rel="stylesheet" href="/stylesheets/stars.css">
    <div class="row">
        <form action="/render_vendor_section/<%=user.id%>" method="GET">
            <% for(let section of place.sections){%>
                <input class="form-check-input  mt-2" type="checkbox" value="<%=section%>" name="section"
                    id="<%=section%>">
                <label class="form-check-label text-dark" for="<%=section%>">
                    <%=section%>
                </label>
                <%}%>
                    <button>Look up specific section</button>
        </form>
        <div class="col-6">
            <div>
                <h1>
                    <%= user.username %>
                </h1>
                <h3>
                    Orders:
                </h3>
            </div>

        </div>
        <form action="/order/create_invoice_section" method="POST">
            <input type="hidden" name="section" id="section" value="<%=section%>">
            <button>Crear Recivo</button>
            <% for(let order of user.orders_to_complete) {%>
                <% if((!order.is_delivered && order.is_paid) || (!order.is_delivered && order.cash)){%>

                    <%if(order.section==section){%>
                        <div class="card mb-3">

                            <div class="col-md-8">
                                <div class="card-body">
                                    <% if(order.customer){%>
                                        <input class="form-check-input  mt-2" type="checkbox" value="<%=order.id%>"
                                            name="id" id="<%=order.id%>">
                                        <label class="form-check-label text-dark" for="<%=order.id%>">
                                            Seleccionar para crear recivo <%= order.id%>
                                        </label>
                                        <h3>
                                            <%=order.quantity%>: <%= order.name%> para <%= order.customer.username%>
                                        </h3>
                                        <h3>
                                            <%=order.customer.phone%>
                                        </h3>
                                        <h3>
                                            Nombre de Usuario: <%=order.customer.username%>
                                        </h3>
                                        <%} else{%>
                                            <input class="form-check-input  mt-2" type="checkbox" value="<%=order.id%>"
                                                name="id" id="<%=order.id%>">
                                            <label class="form-check-label text-dark" for="<%=order.id%>">
                                                Seleccionar para crear recivo <%= order.id%>
                                            </label>
                                            <h3>
                                                <%=order.quantity%>: <%= order.name%>
                                            </h3>
                                            <%}%>
                                                <h3>
                                                    precio: <%=order.price%>$
                                                </h3>
                                                <% if(order.drop_off){%>
                                                    <h3 class="card-text">
                                                        Dropoff: <%= order.drop_off %>
                                                    </h3>
                                                    <%}%>
                                                        <% if(order.seat && order.section){%>
                                                            <h3 class="card-text">
                                                                Asiento: <%= order.seat %>
                                                                    <%=order.letter%>, Seccion: <%= order.section %>
                                                            </h3>
                                                            <%}%>
                                                                <% if (order.seat && !order.section){%>
                                                                    <h3>Asiento: <%= order.seat %>
                                                                            <%=order.letter%>
                                                                    </h3>
                                                                    <%}%>
                                                                        <p class="card-text">
                                                                            <%= order.conf_num %>
                                                                        </p>
                                                                        <% if(order.cash){%>
                                                                            <p class="card-text">
                                                                                Metodo de Pago: Efectivo/Terminal
                                                                            </p>
                                                                            <%} else{%>
                                                                                <p class="card-text">
                                                                                    Metodo de Pago: Paid
                                                                                </p>
                                                                                <%}%>
                                                                                    <form
                                                                                        action="/order/complete/<%=order.id%>"
                                                                                        method="POST">
                                                                                        <button>Completar Orden</button>
                                                                                    </form>
                                                                                    <form action="/five/<%=order.id%>"
                                                                                        method="POST">
                                                                                        <button>Lista en 5
                                                                                            Minutos</button>
                                                                                    </form>

                                                                                    <form action="/ready/<%=order.id%>"
                                                                                        method="POST">
                                                                                        <button>Lista para
                                                                                            Recoger</button>
                                                                                    </form>
                                </div>
                            </div>

                            <%}%>
                                <%}%>
                                    <% } %>
                        </div>

        </form>
    </div>
    </div>


    </div>