<% layout('layouts/boilerplate')%>
    <link rel="stylesheet" href="/stylesheets/stars.css">
    <div class="row">
        <div class="col-6">
            <div>
                <h1>
                    <%= user.username %>
                </h1>

            </div>

        </div>

        <% if (user.orders.length> 0) {%>

            <h3>Orders: </h3>
            <% for(let order of user.orders) {%>
                <% const total_price=((order.price + .3)/(1-.059)).toFixed(2)%>
                    <% const fees=(total_price - order.price).toFixed(2)%>
                        <% if((!order.is_delivered && order.is_paid) || (!order.is_delivered && order.cash)){%>
                            <div class="card mb-3">
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h3>
                                            <%=order.quantity%>
                                                <%= order.posts.title%>
                                                    <br>
                                                    Status: <%= order.status %>
                                        </h3>
                                        <h5>
                                            <br>
                                            Precio: <%=order.price%>$
                                                <!-- <br>
                                                Fees: <%=fees%>
                                        </h5>
                                        <br>
                                        <h3>
                                            Total Price: <%=total_price%>
                                        </h3> -->
                                                <% if (order.drop_off=='N/A' ){%>

                                                    <%}else{%>
                                                        <h3 class="card-text">
                                                            Drop off: <%= order.drop_off %>
                                                        </h3>
                                                        <%}%>
                                                            <% if (order.seat !='N/A' ){%>
                                                                <h3 class="card-text">
                                                                    Asiento: <%= order.seat %>
                                                                        <%=order.letter%>
                                                                            Section: <%= order.section%>
                                                                </h3>
                                                                <%}%>
                                                                    <% if(order.cash){%>
                                                                        <p class="card-text">
                                                                            Metodo de Pago: Efectivo/Terminal
                                                                        </p>
                                                                        <%}%>

                                                                            <p class="card-text">
                                                                                Numero de Confirmacion: <%=
                                                                                    order.conf_num %>
                                                                            </p>
                                    </div>
                                    <form action="/campgrounds/<%=order.campground._id%>" method="GET">
                                        <div class="col-8 mb-2">
                                            <button class="btn btn-primary btn-block">Regresar a
                                                <%= order.campground.name%>
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <%}%>
                                <%}%>
                                    <% } else{ %>
                                        <h1>Sin Ordenes al Momento</h1>
                                        <%}%>


    </div>